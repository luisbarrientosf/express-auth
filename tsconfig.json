{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "paths": {
      "@domain/*": [
        "domain/*"
      ],
      "@infrastructure/*": [
        "infrastructure/*"
      ],
      "@application/*": [
        "application/*"
      ],
      "@presentation/*": [
        "presentation/*"
      ],
    }
  },
  "include": [
    "src/**/*",
    "prisma/generated-client/*.d.ts",
    "prisma/generated-client/*.js",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "prisma/generated-client",
    ".vscode",
  ]
}